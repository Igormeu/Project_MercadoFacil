<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundv2"
    tools:context=".activity_menu">

    <View
        android:id="@+id/conteinermenulogo"
        style="@style/conteinerlogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:src="@drawable/logomercadofacil"
        app:layout_constraintEnd_toEndOf="@id/conteinermenulogo"
        app:layout_constraintStart_toStartOf="@id/conteinermenulogo"
        app:layout_constraintTop_toTopOf="@id/conteinermenulogo" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="29dp"
        app:layout_constraintStart_toStartOf="@id/conteinermenulogo"
        app:layout_constraintEnd_toEndOf="@id/conteinermenulogo"
        app:layout_constraintTop_toBottomOf="@id/imageViewLogo"
        android:text="Mercado Fácil"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/roxo"
        />



    <View
        android:id="@+id/conteinermenu"
        style="@style/ContainerComponents"
        app:layout_constraintTop_toBottomOf="@id/conteinermenulogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/buttonmeunu1"
        style="@style/buttonmenu"
        android:background="@drawable/buttonmenu"

        app:layout_constraintTop_toBottomOf="@id/conteinermenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonmeunu2"/>

    <View
        android:id="@+id/buttonmeunu2"
        style="@style/buttonmenu"
        android:background="@drawable/buttonmenu"

        app:layout_constraintTop_toBottomOf="@id/conteinermenu"
        app:layout_constraintStart_toEndOf="@id/buttonmeunu1"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/buttonmeunu3"
        style="@style/buttonmenu"
        android:background="@drawable/buttonmenu"


        app:layout_constraintTop_toBottomOf="@id/buttonmeunu1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonmeunu4"
        />

    <View
        android:id="@+id/buttonmeunu4"
        android:background="@drawable/buttonmenu"
        app:layout_constraintTop_toBottomOf="@id/buttonmeunu2"
        app:layout_constraintStart_toEndOf="@id/buttonmeunu3"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/buttonmenu"

        />

    <TextView
    android:id="@+id/textViewmenu1"
    style="@style/textview"
    android:text="Acessar \nLista\u00A0de\u00A0Preços"

    app:layout_constraintTop_toTopOf="@id/buttonmeunu1"
    app:layout_constraintStart_toStartOf="@id/buttonmeunu1"
    app:layout_constraintEnd_toEndOf="@id/buttonmeunu1"

    />

    <ImageView
        android:id="@+id/imagemmenu1"
        android:src="@drawable/icone_melhoresprecos"
        android:layout_height="100dp"
        android:layout_width="100dp"
        app:layout_constraintTop_toBottomOf="@id/textViewmenu1"
        app:layout_constraintStart_toStartOf="@id/buttonmeunu1"
        app:layout_constraintEnd_toEndOf="@id/buttonmeunu1"
        android:paddingBottom="20dp"
        />

    <TextView
        android:id="@+id/textViewmenu2"
        style="@style/textview"
        android:text="Adicionar Produtos"

        app:layout_constraintTop_toTopOf="@id/buttonmeunu2"
        app:layout_constraintStart_toStartOf="@id/buttonmeunu2"
        app:layout_constraintEnd_toEndOf="@id/buttonmeunu2"

        />

    <ImageView
        android:id="@+id/imagemmenu2"
        android:src="@drawable/icon_adicionarirtem"
        android:layout_height="100dp"
        android:layout_width="100dp"
        app:layout_constraintTop_toBottomOf="@id/textViewmenu2"
        app:layout_constraintStart_toStartOf="@id/buttonmeunu2"
        app:layout_constraintEnd_toEndOf="@id/buttonmeunu2"
        android:paddingBottom="20dp"
        />

    <TextView
        android:id="@+id/textViewmenu3"
        style="@style/textview"
        android:text="Adicionar \nEstabelecimento"

        app:layout_constraintTop_toTopOf="@id/buttonmeunu3"
        app:layout_constraintStart_toStartOf="@id/buttonmeunu3"
        app:layout_constraintEnd_toEndOf="@id/buttonmeunu3"

        />

    <ImageView
        android:id="@+id/imagemmenu3"
        android:src="@drawable/icone_adicionarestabelecimento"
        android:layout_height="100dp"
        android:layout_width="100dp"
        app:layout_constraintTop_toBottomOf="@id/textViewmenu3"
        app:layout_constraintStart_toStartOf="@id/buttonmeunu3"
        app:layout_constraintEnd_toEndOf="@id/buttonmeunu3"
        android:paddingBottom="20dp"
        />

    <TextView
        android:id="@+id/textViewmenu4"
        style="@style/textview"
        android:text="Conheça mais sobre Nós"

        app:layout_constraintTop_toTopOf="@id/buttonmeunu4"
        app:layout_constraintStart_toStartOf="@id/buttonmeunu4"
        app:layout_constraintEnd_toEndOf="@id/buttonmeunu4"

        />

    <ImageView
        android:id="@+id/imagemmenu4"
        android:src="@drawable/icon_aboutus"
        android:layout_height="100dp"
        android:layout_width="100dp"
        app:layout_constraintTop_toBottomOf="@id/textViewmenu4"
        app:layout_constraintStart_toStartOf="@id/buttonmeunu4"
        app:layout_constraintEnd_toEndOf="@id/buttonmeunu4"
        android:paddingBottom="20dp"
        />

    <TextView
        android:id="@+id/suporteTextInfo"
        android:text="Entre em contato conosco por support@mercadofacil.com.br"
        android:textSize="10sp"
        android:textAlignment="center"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_height="12dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/roxoClaro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <ImageView
        android:id="@+id/imagealertmenu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:src="@drawable/icon_alert"
        app:layout_constraintBottom_toBottomOf="@id/conteinermenu"
        app:layout_constraintStart_toStartOf="@id/conteinermenu"
        app:layout_constraintTop_toTopOf="@id/conteinermenu"/>

    <TextView
        android:id="@+id/alertmelhorpreco"
        style="@style/alerts"
        android:text="O item {item} está  apenas {valor} no {estabelecimeno}"
        app:layout_constraintBottom_toTopOf="@id/alertmelhorpreco"
        app:layout_constraintStart_toEndOf="@id/imagealertmenu"
        app:layout_constraintEnd_toEndOf="@id/conteinermenu"
        app:layout_constraintTop_toTopOf="@id/conteinermenu"/>
    <TextView
        android:id="@+id/alertmelhortabelecimentos"
        style="@style/alerts"
        android:text="O {estabelecimento} localizado na rua {rua} está com os melhores preços registrados"
        app:layout_constraintBottom_toBottomOf="@id/conteinermenu"
        app:layout_constraintStart_toEndOf="@id/imagealertmenu"
        app:layout_constraintEnd_toEndOf="@id/conteinermenu"
        app:layout_constraintTop_toBottomOf="@id/alertmelhorpreco"/>



</androidx.constraintlayout.widget.ConstraintLayout>